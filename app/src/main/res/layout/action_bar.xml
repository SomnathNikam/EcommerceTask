<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_40sdp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_backbtn"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_16sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:src="@drawable/back_arrow" />

        <TextView
            android:id="@+id/ab_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"

           android:textAlignment="center"
            android:layout_marginTop="16dp"

            android:layout_marginBottom="6dp"
            android:layout_toStartOf="@+id/iv_like_icon"
            android:layout_toEndOf="@+id/iv_backbtn"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="Once Weekly Collection"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_shopping"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_16sdp"
            android:layout_alignParentEnd="true"

            android:layout_marginTop="@dimen/_16sdp"
            android:src="@drawable/shopping_icon" />
        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_16sdp"
            android:layout_toStartOf="@id/iv_shopping"
            android:layout_marginTop="@dimen/_16sdp"
            android:src="@drawable/share_icon" />


        <ImageView
            android:id="@+id/iv_like_icon"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_16sdp"
            android:layout_toStartOf="@id/iv_share"
            android:layout_marginTop="@dimen/_16sdp"
            android:src="@drawable/like_icon" />
    </RelativeLayout>
</RelativeLayout>